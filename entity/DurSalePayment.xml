<?xml version="1.0" encoding="UTF-8"?>
<entities xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/entity-definition-3.xsd">
    
    <entity entity-name="DurSalePayment" package="durion.sales">
        <field name="paymentId" type="id" is-pk="true"/>
        <field name="paymentDate" type="date-time"/>
        <field name="invoiceId" type="id"/>
        <field name="orderId" type="id"/>
        <field name="amount" type="currency-amount"/>
        <field name="paymentMethod" type="text-short"/>
        <field name="paymentGateway" type="text-short"/>
        <field name="transactionId" type="text-medium"/>
        <field name="status" type="text-short"/>
        <field name="authorizationCode" type="text-short"/>
        <field name="cardLast4" type="text-short"/>
        <field name="notes" type="text-long"/>
        <relationship type="one" related="durion.sales.DurSaleInvoice" short-alias="invoice"/>
    </entity>

</entities>
